        if(pl[2] - pl[1] == pl[1] - pl[0])
		return true;
	return false;
}

bool TTT::ifEntryExist(int* p)
{
	if( pl1.end() == std::find(pl1.begin(),pl1.end(), p) && pl2.end()  == std::find(pl2.begin(),pl2.end(), p) )
		return false;
	else 
		return true;
}

